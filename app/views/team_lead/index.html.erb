<body>

<%= render :template => "/home/nav" %>

	<table class = "table">
	 	<tr>
	 		<th>
	 			Name
	 		</th>
	 		<th>
	 			Department
	 		</th>
	 		<th>
	 			Action
	 		</th>
	 	</tr>
	 	<% @users.each do |user| %>
		 	<% @department = user.dept_name%>
		 	<% @current_department = @current_user.dept_name%>
		 	<% if logged_in?(:manager)%>
				<% if @current_department == @department%>
					<tr>
			 			<td>
			 				<%=user.name%>
			 			</td>
			 			<td>
			 				<%= @department%>	 				
			 			</td>
			 			<td>
			 				<%=link_to "View",team_lead_path(user)%>
			 			</td>
	 				</tr>
				<%end%>
			<% else%>
				<tr>
		 			<td>
		 				<%=user.name%>
		 			</td>
		 			<td>
		 				<%= @department%>	 				
		 			</td>
		 			<td>
		 				<%=link_to "View",team_lead_path(user)%>
		 			</td>
 				</tr>
			<%end%>
	 	<%end%>
	 </table>
</body>